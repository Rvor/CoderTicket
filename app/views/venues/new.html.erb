<div class="container sign_in_up">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
<%= simple_form_for @venue do |f| %>
  <div class="control-group">                                                                                     
      <%= f.association :region, :label => "Region", :autofocus => true, class: "form-control" %>                
   </div> 
   <div class="control-group">
     <%= f.input :name, class: "form-control" %>
   </div> 
  <div class="control-group"> 
     <%= f.input :full_address, class: "form-control" %>
   </div>
   <div class="form-action">
     <%= f.submit "Save", class: "btn btn-primary" %>
     <%= link_to "Skip", new_event_path, class: "btn btn-secondary" %>
   </div> 
<% end %>
   </div> 
   </div> 
   </div> 
