<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
        <%= @event.venue.name %>
        <br/>
        <%= @event.venue.full_address %>
      </div>
      <div class="pull-left">
          <%= fa_icon 'clock-o' %>
        </div>
        <div class="time-details">
          <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %>
        </div>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@event,@event_ticket_type] do |f| %>
        <div class="control-group">
          <%= f.input :name, :autofocus => true, class: "form-control" %>
        </div>
        <div class="control-group">
          <%= f.input :price, class: "form-control" %>
        </div>
        <div class="control-group">
          <%= f.input :max_quantity, class: "form-control" %>
        </div>
        <div class="form-action">
          <%= f.submit "Save", class: "btn btn-success " %>
        </div>
      <% end %>
    </div>
  </div>
</div>
