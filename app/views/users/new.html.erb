<div class="container sign_in_up">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Sign Up</h2>
      <%= simple_form_for :user, :url => '/users' do |f| %>
        <div class="form-group">
          <%= f.input :name, :autofocus => true, :required => false, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :email, :required => false, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :password, :required => false, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation, :required => false, class: "form-control" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign Up", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
     </div>
  </div>
</div>
