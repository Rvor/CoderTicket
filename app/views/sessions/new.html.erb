<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Log In</h2>
      <%= simple_form_for :session, :url => '/log_in' do |f| %>
        <div class="form-group">
          <%= f.input :email, :autofocus => true, :required => false, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :password, :required => false, class: "form-control" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
     </div>
  </div>
</div>
